<% if flash[:notice] %>
  <p class="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<div class="container px-5 px-sm-0">
    <div class="row">

         <%= render 'books/userinfo', user: @user, book: Book.new %>

            <div class="col-md-8 offset-md-1">
                <h2>Book detail</h2>

                <table class="table">
                    <tbody>
                        <tr>
                            <td>
                                <%= link_to user_path(current_user.id) do %>
                                    <%= attachment_image_tag(@book.user, :profile_image, fallback: "no_image.jpg", size:"40x40") %>
                                    <br><i></i><%= current_user.name %>
                                 <% end %>
                            </td>
                            <td><%= link_to @book.title, book_path(@book.id) %></td>
                            <td><%= @book.body %></td>

                            <% if user_signed_in? && current_user.id == @book.user_id %>

                            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book_path(@book.id)" %></td>
                            <td><%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger destroy_book_path(@book.id)", method: :delete, "data-confirm" => "Are you sure?" %></td>

                            <% end %>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>