<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

          <%= link_to "Bookers", "/", class: "navbar-brand" %>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="navbar-collapse collapse show" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

              <% if user_signed_in? %>
                <li>
                  <!--<a href="books" class="fas fa-home nav-link text-light"> Home</a>-->
                  <%= link_to books_path, class: "nav-link text-light" do %>
                    <i class="fas fa-home"></i> Home
                  <% end %>
                </li>
                <li>
                  <%= link_to users_path, class: "nav-link text-light" do %>
                    <i class="fas fa-users"></i> Users
                  <% end %>
                  <!--<a href="users" class=" nav-link text-light"> users</a>-->
                </li>
                <li>
                  <%= link_to books_path, class: "nav-link text-light" do %>
                    <i class="fas fa-book-open"></i> Books
                  <% end %>
                  <!--<a href="books" class="fas fa-book-open nav-link text-light"> Books</a>-->
                </li>
                <li>
                  <%= link_to destroy_user_session_path, class: "nav-link text-light", method: :delete do %>
                    <i class="fas fa-sign-out-alt"></i> logout
                  <% end %>
                  <!--<a class="fas fa-sign-out-alt nav-link text-light" rel="nofollow" data-method="delete" href="/users/sign_out"> logout</a>-->
                </li>

              <% else %>
                <li>
                  <a href="/" class="fas fa-home nav-link text-light"> Home</a>
                </li>
                <li>
                  <a href="/users/users/homes/about" class="fas fa-link nav-link text-light"> About</a>
                </li>
                <li>
                  <a href="/users/sign_up" class="fas fa-user-plus nav-link text-light"> sign up</a>
                </li>
                <li>
                  <a href="/users/sign_in" class="fas fa-sign-in-alt nav-link text-light"> login</a>
                </li>
              <% end %>
             </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
    <%= yield %>
    </main>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
